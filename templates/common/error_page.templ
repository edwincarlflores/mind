package templates

templ ErrorPage(errorMessage string) {
  @Page("Error", "") {
    <div class="flex h-full items-center justify-center">
      <div class="mx-4 flex justify-center space-x-4 px-6 text-gray-700 sm:space-x-12 sm:px-12">
        <div class="self-center overflow-hidden px-2 font-mono text-sm md:text-5xl">
          {errorMessage}
        </div>
      </div>
    </div>
  }
}